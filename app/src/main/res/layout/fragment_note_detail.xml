<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingHorizontal="16dp"
    tools:context=".ui.fragments.note.NoteDetailFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/return_btn"
            android:background="@drawable/baseline_arrow_back_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#535353" />

        <ImageView
            android:id="@+id/container_1"
            android:background="@drawable/container_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="#5B5B5B" />

        <ImageView
            android:id="@+id/container_2"
            android:background="@drawable/container_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="#FFF599" />

        <ImageView
            android:id="@+id/container_3"
            android:background="@drawable/container_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="#5A3030" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:textColor="#BFBBB1B1"
            android:textSize="16sp"
            tools:text="Time" />

        <EditText
            android:id="@+id/et_add_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_style_et"
            android:hint="description"
            android:textStyle="italic"
            android:textColorHint="#29332727"
            android:layout_marginTop="100dp"
            android:textColor="@color/white" />

    </FrameLayout>

    <TextView
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Готово"
        android:textColor="#CC7011"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:text="Date" />


    <EditText
        android:id="@+id/et_title"
        android:background="@drawable/ic_style_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textColor="@color/white" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginStart="60dp" />

        <RadioButton
            android:id="@+id/rb_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginHorizontal="70dp" />

        <RadioButton
            android:id="@+id/rb_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />

    </RadioGroup>

</FrameLayout>